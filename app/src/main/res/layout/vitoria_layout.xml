<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/styles_layout_principal"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/styles_layout_principal"
        android:orientation="vertical"
        tools:context="br.com.jogodavelha.activitys.SelecionaNumJogadoresActivity" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/styles_layout_secundario"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_vitoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVencedor"
                android:src="@drawable/ic_vitoria_player" />

            <Button
                android:id="@+id/btnJogNovVitoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_vitoria"
                android:layout_centerHorizontal="true"
                android:text="@string/jogar_novamente" />

            <TextView
                android:id="@+id/txtVencedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:textStyle="bold" 
                android:layout_centerHorizontal="true"
                android:textColor="#d4f3c2"/>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>